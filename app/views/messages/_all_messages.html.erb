<% unless @messages.blank?%>
  <div id="message_list">
    <table id="messages_table">
      <% for message in @messages do %>
        <% if message.content.include?("Betty")%>
          <tr id="even">
        <% else %>
          <tr id="odd">
        <% end %>
        <%= render message %>  
        </tr>
      <% end %>
    </table>
  </div> 
<% end%>